<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>SignupServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

	<servlet>
        <servlet-name>InsertCustomerServlet</servlet-name>
        <servlet-class>com.yourcompany.projectname.controller.InsertCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertCustomerServlet</servlet-name>
        <url-pattern>/insertCustomer</url-pattern>
    </servlet-mapping>

	
	

<servlet>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <servlet-class>com.yourcompany.projectname.controller.DeleteCustomerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <url-pattern>/deleteCustomer</url-pattern>
    </servlet-mapping>
	
	<servlet>
        <servlet-name>ShowCustomerServlet</servlet-name>
        <servlet-class>com.yourcompany.projectname.controller.ShowCustomerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowCustomerServlet</servlet-name>
        <url-pattern>/showCustomer</url-pattern>
    </servlet-mapping>
	
	<servlet>
    <servlet-name>UpdateCustomerServlet</servlet-name>
    <servlet-class>com.yourcompany.projectname.controller.UpdateCustomerServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>UpdateCustomerServlet</servlet-name>
    <url-pattern>/updateCustomer</url-pattern>
</servlet-mapping>
	
	
</web-app>